<tr id="js-post-comment-<%= post_comment.id %>">
    <td><%= post_comment.user.name %></td>
    <td><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
    <td><%= post_comment.comment %></td>
 <% if post_comment.user == current_user %>
    <td><%= link_to "削除", post_post_comment_path(post_id: post_comment.post_id, id: post_comment.id),method: :delete, class: "btn btn-danger", remote: true %></td>
 <% end %>
</tr>