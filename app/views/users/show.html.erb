<div class="container">

  <div class="row">
    <div class="col-4">
      <h2>登録者</h2>
        <table class="table table-bordered">
          <thead>
            <tr><th>名前</th><td><%= current_user.name %></td></tr>
            <tr><th>ニックネーム</th><td><%= current_user.nickname %></td></tr>
            <tr><th>好きな食べ物</th><td><%= current_user.favorite_food %></td></tr>
            <tr><th>趣味</th><td><%= current_user.hobby %></td></tr>
            <tr><th>フォロー</th><td><%= link_to @user.followings.count, user_followings_path(@user.id) %></td></tr>
            <tr><th>フォロワー</th><td><%= link_to @user.followers.count, user_followers_path(@user.id) %></td></tr>
            <tr>
              <th>
                <% if @user == current_user %>
                  <%= link_to "編集する", edit_user_path(current_user),class: "btn btn-success" %>
                <% end %>
              </th>
              <td>
                <% if @user.id != current_user.id %>
                  <% if current_user.following?(@user) %>
                    <%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete %>
                  <% else %>
                    <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %></td>
                  <% end %>
                <% end %>
              </td>
            </tr>
          </thead>
        </table>
    </div>
  </div>
</div>

<%= render 'posts/list', posts: @posts %>