<h2>編集画面</h2>
<%= form_with model: @user, local: true do |f| %>
<div class= "field">
    <%= f.label :名前 %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class= "field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class ="field">
    <%= f.label :好きな食べ物 %><br />
    <%= f.text_field :favorite_food %>
  </div>

  <div class ="field">
    <%= f.label :趣味 %><br />
    <%= f.text_field :hobby %>
  </div>

  <div class ="field">
    <%= f.label :共通のログインネーム %><br />
    <%= f.text_field :login_name %>
  </div>

  <div class="field">
    <%= f.label :プロフィール画像 %><br />
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
    現在の画像
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  </div>

  <%= f.submit "保存", class: "btn btn-success" %>
<% end %>