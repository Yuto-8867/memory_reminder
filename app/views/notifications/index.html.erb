<% notifications = @notifications.where.not(visitor_id: current_user.id) %>
  <h3 class="text-center pt-3">通知一覧</h3>
    <%= link_to notification_path(current_user), method: :delete do %>
        <h5 style="color: black;"><i class="fas fa-trash ml-5" style="color: black;"></i>全削除</h5>
    <% end %>
    <hr>
<% if notifications.exists? %>
    <div class="users-index">
        <%= render notifications %>
        <%= paginate notifications %>
    </div>
<% else %>
    <p class="text-center h5">通知はありません</p>
<% end %>