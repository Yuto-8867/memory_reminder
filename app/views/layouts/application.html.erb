<!DOCTYPE html>
<html>
  <head>
    <title>MemoryReminder</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
        <% if user_signed_in? %>
          <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <%= link_to posts_path , class: "navbar-brand pl-5" do %>
              <img src = "/assets/logo.jpg" alt = "logo" width="170" height="30">
            <% end %>
            <div class="collapse navbar-collapse">
              <ul class="navbar-nav ml-auto">
                <li class="navbar-item pr-5"><%= link_to "マイページ",user_path(current_user.id),class: "nav-link" %></li>
                <li class="navbar-item pr-5"><%= link_to "みんなの思い出", posts_path,class: "nav-link" %></li>
                <li class="navbar-item pr-5"><%= link_to "思い出を残す",new_post_path,class: "nav-link" %></li>
                <li class="navbar-item pr-5"><%= link_to "記念日",anniversaries_path,class: "nav-link" %></li>
                <li class="navbar-item pr-5"><%= link_to "ログアウト",destroy_user_session_path,method: :delete,class: "nav-link" %></li>
              </ul>
            </div>
          </nav>


        <% else %>
          <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <%= link_to root_path , class: "navbar-brand pl-5" do %>
              <img src = "/assets/logo.jpg" alt = "logo" width="170" height="30">
            <% end %>
            <div class="collapse navbar-collapse">
              <ul class="navbar-nav ml-auto">
                <li class="navbar-item pr-5"><%= link_to "About", homes_about_path,class: "nav-link" %></li>
                <li class="navbar-item pr-5"><%= link_to "思い出一覧",posts_path,class: "nav-link" %></li>
                <li class="navbar-item pr-5"><%= link_to "新規登録",new_user_registration_path,class: "nav-link" %></li>
                <li class="navbar-item pr-5"><%= link_to "ログイン",new_user_session_path,class: "nav-link" %></li>
              </ul>
            </div>
          </nav>
        <% end %>
    </header>
      <% if flash[:notice] %>
        <div class="alert alert-info text-center">
          <%= flash[:notice] %>
        </div>
      <% end %>
    <%= yield %>
  </body>
</html>
