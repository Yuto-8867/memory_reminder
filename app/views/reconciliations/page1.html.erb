<section class="py-5">
  <h2 class="mb-5 text-center">仲直りページ</h2>
        <div class="container">
          <ul class="nav nav-tabs">
            <li class="nav-item"><a href="#ios" class="nav-link active" data-toggle="tab"><%= @sharing.name %>さんとケンカ</a></li>
            <li class="nav-item"><a href="#android" class="nav-link" data-toggle="tab"><%= current_user.name %>さんとケンカ</a></li>
          </ul>
