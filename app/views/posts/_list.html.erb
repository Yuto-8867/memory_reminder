<% posts.each do |post| %>
  <div class="card mb-3 mx-auto" style="max-width: 800px;">
    <div class="row no-gutters">
      <div class="col-md-4">
        <%= link_to post_path(post.id) do %>
        <%= attachment_image_tag post,:image,width: "140",class: "card-img" %>
        <% end %>
      </div>
        <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= post.created_at.strftime('%Y/%m/%d') %></h5>
          <p class="card-text"><%= post.content %></p>
          <p class="card-text"><small class="text-muted">投稿者:<%= post.name %></small></p>
          <%= link_to "#{post.post_comments.count}コメント",post_path(post.id) %>
        </div>
      </div>
      </div>
    </div>
  </div>
<% end %>
<%= paginate posts %>
