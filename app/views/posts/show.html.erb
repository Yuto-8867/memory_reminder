<h2 class="p-4">投稿詳細</h2>
<div class="card mb-3 mx-auto mt-5" style="max-width: 800px;">
    <div class="row no-gutters">
      <div class="col-md-4">
        <%= attachment_image_tag @post,:image,width: "140",class: "card-img" %>
      </div>
        <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= @post.created_at.strftime('%Y/%m/%d') %></h5>
          <p class="card-text"><%= @post.content %></p>
          <% if @post.user_id == current_user.id %>
            <%= link_to "編集する",edit_post_path(@post), class: "btn btn-success px-3" %>
            <%= link_to "削除する", post_path(@post), method: :delete, class: "btn btn-danger px-3" %>
          <% end %>
        </div>
      </div>
      </div>
    </div>
  </div>