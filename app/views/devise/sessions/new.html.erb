<p class="lead-form mt-5">ログインはこちら！</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label :ログインコード,class: "label" %><br />
    <%= f.text_field :login_name, autofocus: true, class: "inputs" %>
  </div>

  <div class="field">
    <%= f.label :パスワード,class: "label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "inputs" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :保存した状態にする %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログインする",class: "btn btn-danger mr-4 mb-4" %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
